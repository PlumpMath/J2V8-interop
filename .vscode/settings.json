{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.d.ts": {
            "when": "$(basename).ts"
        },
        // .gitignore
        "node_modules": true,
        ".classpath": true,
        ".project": true,
        ".settings": true,
        "target": true
    }
}